<script>

	function login() {
		$.ajax({
			url: '/users/login',
			data: $('#loginForm').serialize(),
			type: 'post',
/*			dataType: 'json',*/
			success: function(data){
				if(data == "success"){
					window.location.href="index.html";
					$("#warning").remove();
				}else{
					$("<span id='warning'><font color='red'>用户名或密码错误</font></span>").insertAfter($("input[name='password']"));
				}
			}

		})
	}

