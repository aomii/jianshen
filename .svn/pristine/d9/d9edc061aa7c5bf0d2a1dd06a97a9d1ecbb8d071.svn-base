<!DOCTYPE HTML>
<html>
<head>
    <title>找回密码</title>
    <script src="js/jquery.js"></script>
    <!-- Custom Theme files -->
    <link href="css/loginStyle.css" rel="stylesheet" type="text/css" media="all"/>
    <!-- for-mobile-apps -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Classy Login form Responsive, Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //for-mobile-apps -->
    <!--Google Fonts-->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
    <style>
        .sub-btn {
            background: #ff3366;
            color: #FFF;
            font-size: 26px;
            padding: 0.3em 1.2em;
            width: 100%;
            font-weight: 500;
            transition: 0.5s all;
            -webkit-transition: 0.5s all;
            -moz-transition: 0.5s all;
            -o-transition: 0.5s all;
            display: inline-block;
            cursor: pointer;
            outline: none;
            border: none;
            border-radius: 3px;
            font-family: 'Roboto Condensed', sans-serif;
        }
    </style>
</head>
<body>
<!--header start here-->
<div class="header">
    <div class="header-main">
        <h1>找回密码</h1>
        <div class="header-bottom">
            <div class="header-right w3agile">

                <div class="header-left-bottom agileinfo">

                    <div>
                        <input type="text"  value="手机号" id="userName" name="userName" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '用户名';}"/>
                        <input type="text"  value="验证码" name="verifyCode" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '验证码';}"/>
                        <button type="button" id="numbtn" class="sendVerifyCode">获取短信验证码</button>
                        <input type="password"  value="新密码" name="password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '新密码';}"/>

                    </div>
                    <input type="button" value="确定修改" class="sub-btn"/>
                </div>
            </div>

        </div>
    </div>
</div>



<script>
    // 获取验证码倒计时
    var countdown = 60;
    $('#numbtn').on('click',function(){
        var len=document.getElementById("userName").value.length;
        // var txttile = $('#userName').val();
        if (len!=11){
            alert('手机号码格式不对');
            return;
        }
        var obj = $("#numbtn");
        settime(obj);
    })
    function settime(obj) { //发送验证码倒计时
        if (countdown == 0) {
            obj.attr('disabled', false);
//obj.removeattr("disabled");
            obj.html("免费获取验证码");
            countdown = 60;
            return;
        } else {
            obj.attr('disabled', true);
            obj.html("重新发送(" + countdown + ")");
            countdown--;
        }
        setTimeout(function () {
                settime(obj)
            }
            , 1000)
    }
</script>
<script>
    $(function () {
//发送验证码
        $(".sendVerifyCode").on("click", function () {
            var userName = $("input[name=userName]").val();
            $.ajax({
                url: "/users/sendSms",
                async: true,
                type: "post",
                dataType: "json",
                data: {"userName": userName},
                success: function (data) {
                    if (data == 'fail') {
                        alert("发送验证码失败");
                        return;
                    }
                }
            });
        })
//提交
        $(".sub-btn").on("click", function () {
            var data = {};
            data.userName = $.trim($("input[name=userName]").val());
            data.password = $.trim($("input[name=password]").val());
            data.verifyCode = $.trim($("input[name=verifyCode]").val());
            $.ajax({
                url:  "/users/retrieve",
                async: true,
                type: "post",
                // dataType: "json",
                data: data,
                success: function (data) {

                    if (data == 'fail') {
                        alert("修改失败");
                        return;
                    }else if (data=="成功") {
                        alert("修改成功");
                        location.href="static-login.html";
                    }else {
                        alert(data);
                    }

                }
            });
        })
    });
</script>

<!--footer end here-->
</body>

</html>